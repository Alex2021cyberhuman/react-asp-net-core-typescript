{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react",
    "lib": [
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.BigInt",
      "ESNext.Promise",
      "ESNext.String",
      "ESNext.Symbol",
      "ESNext.WeakRef",
      "DOM"
    ],
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
